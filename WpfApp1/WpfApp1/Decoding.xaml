        <Label Content="Расшифровка" FontSize="14"  HorizontalAlignment="Left" Margin="327,10,0,0" VerticalAlignment="Top" Width="109" Height="30"/>


        <TextBlock  x:Name="numbering" HorizontalAlignment="Left" Margin="49,341,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="198"/>
        <TextBlock  x:Name="numberingForRu3" HorizontalAlignment="Left" Margin="423,341,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="370"/>
        <TextBlock  x:Name="numberingForRu" FontSize="13" HorizontalAlignment="Left" Margin="220,340,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="540"/>
        <TextBlock  Name="oldAlphabet" HorizontalAlignment="Left" Margin="49,357,0,0" Text="" FontSize="18" TextWrapping="Wrap" VerticalAlignment="Top" Height="47" Width="693"/>
        <TextBlock  x:Name="numberingForRu_Copy" FontSize="13" HorizontalAlignment="Left" Margin="220,340,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="525"/>

    </Grid>
</Window>
